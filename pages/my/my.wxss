/**index.wxss**/

.head {
  height: 240rpx;
  display: flex;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: fixed;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.usermotto {
  margin-top: 200px;
}

.list-wrapper {
  width: 100%;
}

/* 横着的分割View样式 */

/*分割线样式*/

.div-line {
  position: fixed;
  background: #80808015;
  width: 100%;
  height: 10rpx;
}

.div-line1 {
  position: fixed;
  background: #80808015;
  width: 85%;
  right: 20rpx;
  height: 2rpx;
}

.list-item {
  width: 100%;
  height: 120rpx;
}

.list-item_active {
  background-color: #e0e3da;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
}

.item-text {
  position: fixed;
  left: 125rpx;
  font-size: 38rpx;
}

.item-array {
  position: fixed;
  right: 50rpx;
  font-size: 38rpx;
  color: #80808046
}

.item-image {
  position: fixed;
  left: 50rpx;
  width: 40rpx;
  height: 40rpx;
}
